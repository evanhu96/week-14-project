<!-- Loop over each object in the projects array -->
{{#each projects as |project| }}
<div class="row mb-4 project">
  <div class="col-md-15">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/project/{{project.id}}">{{project.name}}</a>
      <p id="user">Created by {{project.user.name}} on {{format_date project.date_created}}</p>
    </h2>
      <!-- Pass needed_funding value to the helper function -->

  </div>
  <div class="col-md-7">
    <p>
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}
<button class="btn btn-primary" onclick="document.location.replace('/post')">new post</button>

